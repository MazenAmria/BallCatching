PLAYER:
	initialize rcv
	loop:
		wait for rcv
		get the ball
		set the src = self()
		set the height of ball = self()->height + random
		set the dest = random_dest()
		notify SEEKER
		initialize rcv

SEEKER:
	initialize rcv
	self()->skcnt++;
	if self()->skcnt == 5:
		notify end_game
		pthread_exit()
	loop:
		wait for rcv
		see the ball
		try to catch it
		if catched:
			pthread_cancel(ball->src->thread)
			pthread_create(&(ball->src->thread), seek)
			pthread_create(&(self()->thread), play)
			pthread_exit()
		initialize rcv

MAIN:
	create_threads()
		- cancel_status = enable
	initialize PLAYERS
	initialize SEEKER
	initialize BALL
	wait for end_game
	exit()