PLAYER:
	initialize rcv
	loop:
		wait for rcv
		get the ball
		set the src
		set the height of ball (your height + random)
		set the dest (random)
		initialize rcv

SEEKER:
	initialize rcv
	loop:
		wait for rcv
		see the ball
		try to catch it
		if catched:
			/* swap thrower and seeker */
			pthread_cancel(ball.src.thread)
			thread = pthread_create(seeker)
			seeker.thread = thread
			src.thread = pthread_self()
			be the player
		initialize rcv