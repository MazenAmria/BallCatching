PLAYER:
	initialize rcv
	loop:
		wait for rcv
		get the ball
		set the src
		set the height of ball (your height + random)
		set the dest (random)
		initialize rcv

SEEKER:
	initialize rcv
	this.skcnt++;
	if skcnt == 5:
		notify end_game
		pthread_exit()
	loop:
		wait for rcv
		see the ball
		try to catch it
		if catched:
			pthread_cancel(ball.src.thread)
			ball.src.thread <-- pthread_create(SEEKER)
			this.thread <-- pthread_create(PLAYER)
			pthread_exit()
		initialize rcv

MAIN:
	wait for end_game
	exit()